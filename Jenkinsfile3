pipeline {
    environment {
    DOCKERHUB_REGISTRY = "sharkynd/simplenodeapp"
    DOCKERHUB_CREDENTIALS = credentials('sharky-dockerhub')
    dockerImage = ''
    }
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Test') {
      steps {
        sh "echo $DOCKERHUB_REGISTRY"
      }
    }
    stage('Build Dockerfile'){
      steps {
        sh "docker ps"
      }
    }
  }
}